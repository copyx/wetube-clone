mixin videoPlayer(video = {})
  #jsVideoPlayer.videoPlayer
    video(src=video.src)
    .videoPlayer__controls
      .videoPlayer__column
        input#jsVolume.videoPlayer__volume(
          type="range",
          min="0",
          max="1",
          step="0.01",
          value="0.5"
        )
        span#jsVolumeBtn
          i.fas.fa-volume-up
        span
          span#currentTime 00:00:00
          | /
          span#totalTime 00:00:00
      .videoPlayer__column
        span#jsPlayBtn
          i.fas.fa-play
      .videoPlayer__column
        span#jsFullScrnBtn
          i.fas.fa-expand
