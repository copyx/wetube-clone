extends layouts/main

block content
    .form-container
        form(action=`${routes.users}${routes.changePassword}`, method="post")
            input(type="password", placeholder="Current Password", name="oldPassword", required=true)
            input(type="password", placeholder="New Password", name="newPassword", required=true)
            input(type="password", placeholder="Verify New Password", name="newPasswordToVerify", required=true)
            input(type="submit", value="Change Password")
